<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get the form element
    var categoryForm = document.getElementById('categoryform');

    // Add submit event listener to the form
    categoryForm.addEventListener('submit', function(event) {
      // Get the values of the input fields
      var categoryName = document.getElementById('categoryname').value.trim();
      var categoryDescription = document.getElementById('description').value.trim();

      // Reset error messages
      document.getElementById('categoryNameError').textContent = '';

      // Check if any field is empty
      if (categoryName === '' || categoryDescription === '') {
        document.getElementById('categoryNameError').textContent = 'All fields are required.';
        event.preventDefault(); // Prevent form submission
      }

      // Check if category description contains only letters
      if (!/^[a-zA-Z\s]+$/.test(categoryDescription)) {
        document.getElementById('categoryNameError').textContent = 'Category description should contain only letters.';
        event.preventDefault(); // Prevent form submission
      }
    });
  });
</script>

