<script>
  const buttons = document.querySelectorAll('.removeImagesButton');

  buttons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();

      const fileId = e.target.getAttribute('data-id');
      const productIdElement = document.querySelector('#productForm input[name="id"]');
      const productId = productIdElement ? productIdElement.value : null;

      if (!productId) {
        console.error('Product ID not found.');
        return;
      }

      console.log('Data being sent in fetch request:', { productId, file: fileId });

      fetch('/admin/removeimages', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productId, file: fileId })
      })
      .then(response => {
        if (!response.ok) {
          throw new Error(`HTTP error! Status: ${response.status}`);
        }
        return response.json();
      })
      .then(data => {
        console.log('Server response:', data);

        if (data.success) {
          console.log('Image removed successfully');
          location.reload(true);
        } else {
          console.error('Failed to remove image:', data.error);
        }
      })
      .catch(error => {
        console.error('Error:', error.message);
      });
    });
  });
</script>


