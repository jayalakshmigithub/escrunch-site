          },
        })
          .then((response) => response.json())
          .then((data) => {
            // If the return is successful, show the modal and update the order status
            if (data.success) {
              showReturnOrderModal();

              document.getElementById("orderStatusElement").innerText =
                "Returned";
            } else {
              console.error("Return order failed:", data.error);
            }
          })
          .catch((error) => {
            console.error("Error processing return order:", error);
          });
      }

