     <div class="row">
        <div class="col-12">
          <h3 class="text-center mt-4">Order List</h3>
          <% orders.forEach(function(item) { %>
            <!-- starts here-------- -->

          

            <!-- ends here------------ -->
            <div class="border border-2 p-3 mb-4">
              <a href="/orderdetails/<%= item.id %>">
                <h4 class="d-flex"><strong>Order ID: <%= item.humanReadableID %></strong></h4>
              </a>
      
              <div class="order-details">
                <span>
                  <i class="material-icons md-calendar_today"></i>
                  <b>Order ID: <%= orders.humanReadableID %></b>
              </span>
              <br>
                <span>
                  <i class="material-icons md-calendar_today"></i>
                  <b>Order Date: <%= new Date(item.createdAt).toLocaleString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' }) %></b>
                </span>
                <br>
                <span>
                  <% if (item.orderStatus !== 'Cancelled' && item.orderStatus !== 'Delivered' && item.orderStatus !== 'Returned') { %>
                    <i class="material-icons md-calendar_today"></i>
                    <b>Delivery Estimate: <%= new Date(item.createdAt.getTime() + 5 * 24 * 60 * 60 * 1000).toLocaleString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' }) %></b>
                  <% } %>
                </span>
      
                <p>Total Amount: <%= item.totalAmount %></p>
                <p>Final Price: <%= item.finalPrice %></p>
      
                <h5>Shipping Address:</h5>
                <ul class="list-unstyled">
                  <li><span>Address</span> : <%= item.address.address %></li>
                  <li><span>City</span> : <%= item.address.city %></li>
                  <li><span>State</span> : <%= item.address.state %></li>
                  <li><span>Pincode</span> : <%= item.address.pincode %></li>
                </ul>
      
                <!-- Update the badge styles for order status -->
                <span class="badge custom-badge text-capitalize" style="background-color: #ff5733; color: #fff; font-size: 20px; padding: 8px 16px;">
                  <%= item.orderStatus %>
                </span>
      
                <!-- Add Cancel Order Button -->
                <div class="text-center mt-3">
                  <% if (item.orderStatus !== 'Cancelled' && item.orderStatus !== 'Delivered' && item.orderStatus !== 'Returned') { %>
                    <button class="btn btn-danger" onclick="cancelOrder('<%= item._id %>')" onmouseover="this.style.backgroundColor='#ff5252';" onmouseout="this.style.backgroundColor='#ff7f7f';">Cancel Order</button>
                  <% } %>
                </div>
                
